@model IEnumerable<Events.Models.Event>

@{
    ViewBag.Title = "Home Page";
}

<style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */
    .navbar {
        margin-bottom: 50px;
        border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */
    .jumbotron {
    }

    /* Add a gray background color and some padding to the footer */
    footer {
        background-color: #f2f2f2;
        padding: 25px;
    }

    .carousel-inner img {
        margin: auto;
    }

    .item img {
        width: 100%;
        height: initial;
    }
</style>

<br />

<div class="jumbotron">
    <div class="container text-center">
        <h1>Online Event Booking</h1>
        <p>Applications Development Project 3B</p>
    </div>
</div>


<div class="container">
    <div class="row">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/W1.jpg" alt="Image">
                    <div class="carousel-caption">
                        <h3>Welcome to our store!</h3>
                        <p>Click on the button below to find a product.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/W2.jpg" alt="Image">
                    <div class="carousel-caption">
                        <h3>We deliver!</h3>
                        <p>Just create an account and place your order!</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <br />
    <h3 class="text-nowrap">Comedies</h3>

    <hr>
    <div class="row">
        @foreach (var item in Model.Where(x => x.EventCategory.EventCategoryName == "Comedy"))
        {
            <div>
                <div class="col-md-4" style="border: 2px solid; border-radius: 6px; border-color:cadetblue; padding-top: 6px">
                    <p class="text-center" style="border: 2px solid; border-radius: 5px; border-color: cadetblue; color: white; background-color:cadetblue">@item.EventDescription1</p>
                    <a href="#" data-toggle="modal" data-target="#@item.EventId">
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.EventPicture)" class="img-responsive img-rounded" style="width: 350px; height: 350px; background-size: contain; padding-bottom: 5px" />
                    </a>
                    <p class="text-center" style="border: 2px solid; border-radius: 5px; border-color: darkseagreen; color: black; background-color:beige; font-family: Arial; font-size:large;">@item.StartDate.AsDateTime().ToString("dddd, dd MMMM yyyy") to @item.EndDate.AsDateTime().ToString("dddd, dd MMMM yyyy")</p>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="@item.EventId" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title text-center" style="font: lighter 20px arial;">@item.EventName</h4>
                            </div>
                            <div class="modal-body">
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.EventPicture)" width="100%" height="100%" />
                                <br />
                                <br />
                                <h4 class="modal-title text-center">@item.EventDescription2</h4>
                                <hr />
                                <h4 class="modal-title text-center">Location: @item.EventLocation</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Details", "Events", new { id = item.EventId })'">View Event</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        }
    </div>
</div>

