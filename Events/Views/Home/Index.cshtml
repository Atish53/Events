@model IEnumerable<Events.Models.Event>

@{
    ViewBag.Title = "Home Page";
}

<style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */
    .navbar {
        margin-bottom: 50px;
        border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */
    .jumbotron {
    }

    /* Add a gray background color and some padding to the footer */
    footer {
        background-color: #f2f2f2;
        padding: 25px;
    }

    .carousel-inner img {
        margin: auto;
    }

    .item img {
        width: 100%;
        height: initial;
    }
</style>

<br />

<div class="jumbotron">
    <div class="container text-center">
        <h1>Online Event Booking</h1>
        <p>Applications Development Project 3B</p>
    </div>
</div>


<div class="container">
    <div class="row">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Image/W1.jpg" alt="Image">
                    <div class="carousel-caption">
                        <h3>Welcome to our store!</h3>
                        <p>Click on the button below to find a product.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Image/W2.jpg" alt="Image">
                    <div class="carousel-caption">
                        <h3>We deliver!</h3>
                        <p>Just create an account and place your order!</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <br />
    <h3 class="text-nowrap">Comedies</h3>

    <hr>
    <div class="row">
        @foreach (var item in Model.Where(x => x.EventCategory.EventCategoryName == "Comedy"))
        {
            <div class="col-md-4">
                <a href="#" data-toggle="modal" data-target="#@item.EventId">
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.EventPicture)" class="img-responsive img-rounded" width="100%" height="100%" style="min-width: 360px; max-width: 360px; width: 360px; min-height: 200px; max-height: 200px; height: 200px; background-size: contain;" />
                </a>
            </div>
        }
    </div>
</div>

